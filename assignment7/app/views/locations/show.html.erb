<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<table>
<% @qr.modules.each_index do |x| %>
  <tr>  
  <% @qr.modules.each_index do |y| %>
   <% if @qr.dark?(x,y) %>
    <td class="black"/>
   <% else %>
    <td class="white"/>
   <% end %>
  <% end %>
  </tr>
<% end %>
</table>

<p>
  <strong>Event:</strong>
  <%= @location.event %>
</p>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', event_path(@location.event_id) %>
